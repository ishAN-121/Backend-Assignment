<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <link rel="stylesheet" href="css/books.css" type="text/css">
        <title>BOOKS</title>
</head>
<body>
    <div class="full-page center">
        <div class = "position">
        <h1 class="title">VIEW BOOKS
        </h1></div>
    <table class="table size">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Quantity</th>
            <th scope="col">Total Quantity</th>
          </tr>
        </thead>
        <tbody>
            <% books.forEach(function(item){ %>
          <tr>
            <th scope="row"><%= item.id%></th>
            <td><%= item.title %></td>
            <td><%= item.author %></td>
            <td><%= item.count %></td>
            <td><%= item.totalcount %></td>
          </tr>
          <% }); %>
          </tbody>
      </table>
      <div class ="links">
        <a href = "logout"><button type="button" class="btn btn-primary btn-lg px-4 me-md-2 ">Logout</button></a>
        <a href = "home"><button type="button" class="btn btn-outline-secondary btn-lg px-4">Home</button></a></div>
        </div>
      </div>
      <%- include('./partials/footer.ejs') %>
</body>
</html>